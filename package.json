{
  "name": "@artemkdr/nodejs-library",
  "version": "1.0.0",
  "author": "Artem Kudryavtsev <artem.kdr@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/artemkdr/nodejs-library.git"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bun": "latest",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "globals": "^16.3.0",
    "typescript": "^5.5.4"
  },
  "description": "A collection of reusable Node.js libraries",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "bun --filter='*' run build",
    "test": "bun --filter='*' test",
    "lint": "bun --filter='*' lint",
    "lint:fix": "bun --filter='*' lint:fix",
    "clean": "bun run --filter='*' clean && rm -rf node_modules/.cache",
    "prepublishOnly": "bun --filter='*' test && bun --filter='*' lint",
    "publish:all": "bun --filter='*' publish",
    "version:patch": "bun run --filter='*' version:patch",
    "version:minor": "bun run --filter='*' version:minor",
    "version:major": "bun run --filter='*' version:major",
    "install:all": "bun install"
  },
  "workspaces": [
    "packages/*"
  ]
}
