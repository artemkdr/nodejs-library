{
  "name": "@artemkdr/nodejs-libraries",
  "version": "1.0.0",
  "description": "A collection of reusable Node.js libraries",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter='*' build",
    "test": "bun run --filter='*' test",
    "lint": "bun run --filter='*' lint",
    "clean": "bun run --filter='*' clean && rm -rf node_modules/.cache",
    "dev": "bun run --filter='*' dev",
    "publish:all": "bun run build && bun run --filter='*' publish",
    "version:patch": "bun run --filter='*' version:patch",
    "version:minor": "bun run --filter='*' version:minor",
    "version:major": "bun run --filter='*' version:major",
    "install:all": "bun install"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@eslint/json": "^0.13.1",
    "@types/bun": "latest",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.40.0"
},
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/artemkdr/nodejs-libraries.git"
  },
  "author": "Artem Kudryavtsev <artem.kdr@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
